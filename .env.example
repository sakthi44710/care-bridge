# ==============================================================
# CareBridge Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================================

# --- AI Services ---
GOOGLE_API_KEY=your_google_gemini_api_key_here
HF_API_KEY=your_huggingface_api_key_here

# --- Firebase (Frontend Hosting) ---
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=000000000000
FIREBASE_APP_ID=1:000000000000:web:xxxxxxxxxx
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# --- PostgreSQL ---
POSTGRES_USER=carebridge
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=carebridge

# --- MinIO Object Storage ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_minio_password

# --- Keycloak Identity Provider ---
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_this_keycloak_password

# --- HashiCorp Vault ---
VAULT_DEV_ROOT_TOKEN_ID=carebridge-vault-dev-token

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Backend Security ---
SECRET_KEY=change-this-to-a-random-256-bit-key
