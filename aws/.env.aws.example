# ============================================================
# CareBridge - AWS Environment Variables Template
# Copy this file to .env and fill in the values before deploying.
# ============================================================

# ----- AWS Configuration -----
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID

# ----- Database (RDS PostgreSQL) -----
# These are set automatically via CloudFormation outputs;
# only needed if configuring manually.
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
# DATABASE_URL is constructed automatically in the ECS task definition

# ----- AI Service API Keys -----
NVIDIA_API_KEY=your_nvidia_api_key
NVIDIA_MODEL=meta/llama-3.1-70b-instruct
NVIDIA_VISION_MODEL=microsoft/phi-3.5-vision-instruct
GOOGLE_API_KEY=your_google_api_key
HF_API_KEY=your_huggingface_api_key

# ----- Firebase Configuration -----
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Service Account (for backend)
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_CLIENT_CERT_URL=your_cert_url

# ----- Application -----
SECRET_KEY=generate-a-256-bit-secret-key
DEBUG=false
CORS_ORIGINS=https://your-alb-dns.amazonaws.com,http://localhost:3000

# ----- Frontend Build Args -----
NEXT_PUBLIC_API_URL=https://your-alb-dns.amazonaws.com
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
